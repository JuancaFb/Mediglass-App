<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/mediglass-errors.log</file> <!-- Ruta del archivo de registro -->
        <append>true</append> <!-- Agregar al archivo existente si es verdadero -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="error"> <!-- Nivel de registro para errores -->
        <appender-ref ref="FILE"/>
    </root>
</configuration>
